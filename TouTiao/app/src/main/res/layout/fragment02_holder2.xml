<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/holder2_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:singleLine="true"
        android:text="464561561"
        android:textColor="@android:color/black"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/holder2_pic01"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/holder2_pic02"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/holder2_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="5456465"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/holder2_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_weight="9"
            android:text="afdsfsdfs"
            android:textSize="20dp"
            />
    </LinearLayout>
</LinearLayout>